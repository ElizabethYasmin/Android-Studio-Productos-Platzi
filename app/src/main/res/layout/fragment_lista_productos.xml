<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaProductos">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp" android:layout_height="320dp">

        <!--    <ImageView-->
        <!--        android:id="@+id/ivProductos"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        android:scaleType="centerCrop"/>-->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Vista para mostrar la imagen del producto -->
            <ImageView
                android:id="@+id/ivProductos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>
            <!--            android:src="@drawable/placeholder_image" />-->

            <!-- Contenedor horizontal para el nombre y el precio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- Vista para mostrar el nombre del producto -->
                <TextView
                    android:id="@+id/textViewNombreProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre del Producto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>

                <!-- Vista para mostrar el precio del producto -->
                <TextView
                    android:id="@+id/textViewPrecioProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: $0.00"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Otras vistas, como descripción o categoría, según tus necesidades -->

            <!-- Botón para iniciar la búsqueda del producto -->
            <!--        <Button-->
            <!--            android:id="@+id/btnBuscarProducto"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="Buscar Producto"-->
            <!--            android:layout_marginTop="8dp"/>-->

            <!-- Botón para ordenar por precio -->
            <!--        <Button-->
            <!--            android:id="@+id/btnOrdenarPorPrecio"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="Ordenar por Precio"-->
            <!--            android:layout_marginTop="8dp"/>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>